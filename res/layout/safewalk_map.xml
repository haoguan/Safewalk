<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <WebView
        android:id="@+id/wv_map"
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/rl_routes_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wv_map"
        android:background="@drawable/route_options_border"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/tv_route_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route Options"
            android:textColor="#15449B" />

        <TextView
            android:id="@+id/tv_route_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_route_title"
            android:layout_below="@+id/tv_route_title"
            android:text="Crimes reported in the last three months"
            android:textColor="#15449B"
            android:textSize="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_routes"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/rl_routes_title"
        android:background="#FFFFFF"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" >

        <LinearLayout
            android:id="@+id/ll_routes"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
            
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>